<?xml version="1.0" ?>

<wcs:WCS_Capabilities xmlns:wcs="http://www.opengis.net/wcs"
                      xmlns:gml="http://www.opengis.net/gml"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                      version="1.0.0">
    <wcs:Service version="1.0.0">
        <wcs:description>xcube WCS server</wcs:description>
        <wcs:name>xcube-WCS</wcs:name>
        <wcs:label>xcube-WCS</wcs:label>
        <!-- <Keywords/>   First version: no keywords -->
        <!-- <responsibleParty/>   First version: no responsible party -->
        <wcs:fees>NONE</wcs:fees>
        <wcs:accessConstraints>NONE</wcs:accessConstraints>
    </wcs:Service>
    <wcs:Capability version="1.0.0">
        <wcs:Request>
            <wcs:GetCapabilities>
                <wcs:DCPType>
                    <wcs:HTTP>
                        <wcs:Get>
                            <wcs:OnlineResource xlink:href="https://xcube.brockmann-consult.de/wcs/kvp?service=WCS&amp;version=1.0.0&amp;request=GetCapabilities"/>
                        </wcs:Get>
                    </wcs:HTTP>
                </wcs:DCPType>
            </wcs:GetCapabilities>
            <wcs:DescribeCoverage>
                <wcs:DCPType>
                    <wcs:HTTP>
                        <wcs:Get>
                            <wcs:OnlineResource xlink:href="https://xcube.brockmann-consult.de/wcs/kvp?service=WCS&amp;version=1.0.0&amp;request=DescribeCoverage"/>
                        </wcs:Get>
                    </wcs:HTTP>
                </wcs:DCPType>
            </wcs:DescribeCoverage>
            <wcs:GetCoverage>
                <wcs:DCPType>
                    <wcs:HTTP>
                        <wcs:Get>
                            <wcs:OnlineResource xlink:href="https://xcube.brockmann-consult.de/wcs/kvp?service=WCS&amp;version=1.0.0&amp;request=GetCoverage"/>
                        </wcs:Get>
                    </wcs:HTTP>
                </wcs:DCPType>
            </wcs:GetCoverage>
        </wcs:Request>
        <wcs:Exception>
            <wcs:Format>application/x-ogc-wcs</wcs:Format>
        </wcs:Exception>
    </wcs:Capability>
    <wcs:ContentMetadata version="1.0.0">
        <!--        Unordered list of brief descriptions of all coverages avaialble
                    from this WCS, or a reference to another service from which this
                    information is available. -->
    </wcs:ContentMetadata>
</wcs:WCS_Capabilities>